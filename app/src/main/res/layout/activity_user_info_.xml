                tools:layout_constraintTop_creator="1" />

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/spinner4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/select_here"
                android:textColorHint="#CFD8DC"
                app:met_floatingLabel="normal"
                app:met_primaryColor="#000000"
                app:met_baseColor="@color/colorAccent"
                app:met_floatingLabelTextColor="@color/colorAccent"
                app:met_textColor="@color/colorAccent"
                app:met_textColorHint="@color/colorAccent"
                android:popupBackground="@color/colorAccent1"/>


            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_margin="2dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="6dp"
                android:text="@string/select_your_age"
                android:textAlignment="center"
                android:textSize="24sp"
                app:layout_constraintHorizontal_bias="0.162"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/etUsernameReg"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
