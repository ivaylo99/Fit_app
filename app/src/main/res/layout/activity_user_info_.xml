                app:met_floatingLabelTextColor="@color/colorAccent"
                app:met_textColor="@color/colorAccent"
                app:met_textColorHint="@color/colorAccent"
                android:popupBackground="@color/colorAccent1"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_margin="2dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/select_meals_per_day"
                android:textAlignment="center"
                android:textSize="24sp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="@+id/textView4"
                app:layout_constraintRight_toRightOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/etUsernameReg"
                tools:layout_constraintLeft_creator="1"
